<section>
    <div class="hero-image d-flex align-items-center" style="background-image: url({{ section.settings.background_image | image_url }});">
        <div class="container">
            <div class="hero-text text-white m-0 col-md-6">
                <div class="p-5 border border-1 banner-box">
                    <h1>{{ section.settings.heading }}</h1>
                    <p class="h4 mt-4 mb-5">{{ section.settings.subtitle }}</p>
                    {% render 'button' with additional_class: 'btn-red' %}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "text",
      "id": "btn-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn-url",
      "label": "Button Url"
    }
  ],
  "presets": [
    {
      "category": "Banner Image",
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}