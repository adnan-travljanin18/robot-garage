{% assign additional_class = "" %}

<section class="py-5">
    <div class="container">
        <div class="row align-items-center gap-5 gap-lg-0 py-3 bg-image">
          <div class="col-12 col-lg-8 position-relative">
            <video muted id="video" class="w-100">
              <source src="{{ section.settings.video.sources[1].url }}">
            </video>
            <div id="play-button" class="justify-content-center align-items-center gap-2 border border-1 position-absolute top-50 start-50 translate-middle"><i class="fa-solid fa-video"></i><p class="m-0">Play Video</p></div>
          </div>
            <div class="col-12 col-lg-4 text-center text-lg-start d-flex d-lg-block align-items-center flex-column">
                <h3>{{ section.settings.heading }}</h3>
                <p>{{ section.settings.subtext }}</p>
                {% render 'button' with additional_class: 'btn-yellow', btn-url: section.settings.btn_url, btn-text: section.settings.btn_text %}
            </div>
        </div>
    </div>
</section>

<script defer src="{{ 'play-button.js' | asset_url }}"></script>


{% schema %}
{
  "name": "Custom Video with Text",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Add Video Here"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "info": "Add Title Here"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Description",
      "info": "Add Description Here"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "info": "Add Button Text here"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url",
      "info": "Add Button Url Here"
    }
  ],
  "presets": [
    {
      "category": "Image with Text",
      "name": "Custom Video with Text"
    }
  ]
}
{% endschema %}