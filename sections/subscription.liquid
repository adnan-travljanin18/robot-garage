<section>
    <div class="container">
        <div>
            <h2 class="h1">{{ section.settings.heading }}</h2>
            <div class="row">
                {% assign leftSideBlocks = section.blocks | where: "type", "left-side" %}
                {% assign rightSideBlocks = section.blocks | where: "type", "right-side" %}
                <div class="col-6">
                    {% for block in leftSideBlocks %}
                        <h3>{{section.settings.left_sub_heading}}</h3>
                        <div class="row">
                            <div class="col-4">
                                <img src="{{block.settings.image1 | image_url }}" alt="Image One">
                                <small>{{block.settings.small_text1}}</small>
                                <p>{{block.settings.text1}}</p>
                            </div>
                            <div class="col-4">
                                <img src="{{block.settings.image2 | image_url }}" alt="Image Two">
                                <small>{{block.settings.small_text2}}</small>
                                <p>{{block.settings.text2}}</p>
                            </div>
                            <div class="col-4">
                                <img src="{{block.settings.image3 | image_url }}" alt="Image Three">
                                <small>{{block.settings.small_text3}}</small>
                                <p>{{block.settings.text3}}</p>
                            </div>
                        </div>
                        <a href="{{section.settings.left_btn_url}}">{{section.settings.left_btn_text}}</a>
                    {% endfor %}
                </div>
                <div class="col-6">
                    {% for block in rightSideBlocks %}
                        <h3>{{section.settings.right_sub_heading}}</h3>
                        <div class="row">
                            <div class="col-4">
                                <img src="{{block.settings.image1 | image_url }}" alt="Image One">
                                <small>{{block.settings.small_text1}}</small>
                                <p>{{block.settings.text1}}</p>
                            </div>
                            <div class="col-4">
                                <img src="{{block.settings.image2 | image_url }}" alt="Image One">
                                <small>{{block.settings.small_text2}}</small>
                                <p>{{block.settings.text2}}</p>
                            </div>
                            <div class="col-4">
                                <img src="{{block.settings.image3 | image_url }}" alt="Image One">
                                <small>{{block.settings.small_text3}}</small>
                                <p>{{block.settings.text3}}</p>
                            </div>
                        </div>
                        <a href="{{section.settings.right_btn_url}}">{{section.settings.right_btn_text}}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

